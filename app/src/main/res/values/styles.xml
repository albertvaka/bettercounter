<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccentDisabled</item>

        <!-- ActionBar text and overflow menu icon -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>

        <!-- Dialog background -->
        <item name="colorBackgroundFloating">@color/colorPrimary</item>

        <!-- Fab background -->
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Theme.MaterialComponents.Bridge" >
        <!-- ActionBar menu background -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">@dimen/dividerSpacing</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>